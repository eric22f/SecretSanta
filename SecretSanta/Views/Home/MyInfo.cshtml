@model MySecretSanta
@{
    ViewData["Title"] = "MyInfo";
}

<h1 style="color: green">Secret Santa</h1>

<div>
    <h4 style="color: red">@Html.DisplayFor(m => m.SantaFullName)</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="MyInfo">
                @Html.HiddenFor(m => m.UserCode)
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="SantaFullName" class="control-label"></label>
                    <h4>@Html.DisplayFor(m => m.SantaFullName)</h4>
                </div>
                <div class="form-group">
                    <label asp-for="Address" class="control-label"></label>
                    <textarea asp-for="Address" class="form-control" style="height: 150px;"></textarea>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
            <p>
                <label style="white-space: pre; color: red;">@Html.DisplayFor(m => m.InfoMsg)</label>
            </p>
        </div>
    </div>
</div>

<div>
    <p>
        @using (Html.BeginForm("Index", "Home", FormMethod.Post))
        {
            @Html.HiddenFor(m => m.UserCode)
            <a href="javascript:document.forms[1].submit()" id="submit_link" style="font-size: smaller">Return to Secret Santa</a>
        }
    </p>
</div>
